<h1>List of trips</h1>

<table class='table table-bordered table-striped'>
  <thead>
    <tr>
      <th></th>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Driver</th>
      <th>Passenger</th>
    </tr>
  </thead>

  <tbody>
  <% @trips.each do |trip| %>
    <tr>
      <td>
        <li><%= link_to 'Details', trip_path(trip.id) %></li>
        <li><%= link_to 'Edit', edit_trip_path(trip.id) %></li>
        <li><%= link_to 'Delete', trip_path(trip.id), method: :destroy %></li>
      </td>
      <td><%= trip.date %></td>
      <td><%= trip.rating %></td>
      <td>$<%= trip.cost %></td>
      <td><%= trip.driver_id %></td>
      <td><%= trip.passenger_id %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "Return to Passenger List", passengers_path,
    method: "get", class: "button"
%>