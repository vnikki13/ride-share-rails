<h1>Edit Driver</h1>
<%= form_with model: @driver, class: 'edit-driver' do |f| %>
  <p>Please update the data for the driver:</p>
  <table>
  <tr>
  <td><%= f.label :name %></td>
  <td><%= f.text_field :name %></td>
  </tr>

  <tr>
  <td><%= f.label :vin %></td>
  <td><%= f.text_field :vin %></td>
  </tr>

  <tr>
  <td><%= f.label :available %></td>
  <td><%= f.check_box :available %></td>
  </tr>
  </table>
  <%= f.submit "Save Driver", class: "button" %>
<% end %>

